<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <selector>
            <item android:state_enabled="false" android:state_activated="true">
                <shape android:shape="oval">
                    <solid android:color="@color/AcWen_primary" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="oval">
                    <solid android:color="@color/purple_100" />
                </shape>
            </item>
            <item android:state_activated="true">
                <shape android:shape="oval">
                    <solid android:color="@color/AcWen_primary_dark" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/AcWen_primary" />
                </shape>
            </item>
        </selector>
    </item>

    <!-- FIXME: Use an oval background instead. -->
    <item android:drawable="@drawable/abc_item_background_holo_light" />
</layer-list>
