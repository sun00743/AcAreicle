<?xml version="1.0" encoding="utf-8"?><!-- HACK: Use 1px negative margin to workaround white frame of CardView. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-1px"
    android:layout_marginRight="-1px"
    android:orientation="vertical">

    <mika.com.android.ac.ui.FriendlyCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:layout_marginLeft="@dimen/card_horizontal_margin"
        android:layout_marginRight="@dimen/card_horizontal_margin"
        android:layout_marginTop="@dimen/card_vertical_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardMaxElevation="@dimen/card_elevation">

        <mika.com.android.ac.articlelist.ui.ArticleDesLayout
            android:id="@+id/articledes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </mika.com.android.ac.ui.FriendlyCardView>
</LinearLayout>
