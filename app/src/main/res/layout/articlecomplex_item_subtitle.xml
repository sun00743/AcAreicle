<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subtitle_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@color/write"
    android:visibility="gone">

<!--
    <ProgressBar
        android:id="@+id/subtitle_comment_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@+id/subtitle_text" />
-->

    <TextView
        android:id="@+id/subtitle_text"
        style="?android:attr/textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingEnd="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:paddingStart="16dp"
        android:text="@string/string_comment"
        android:textColor="@color/black_54">

    </TextView>

    <ImageButton
        android:id="@+id/subtitle_update_comment"
        android:layout_width="@dimen/touch_target_size"
        android:layout_height="@dimen/touch_target_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/article_subtitle_refresh"
        android:padding="@dimen/icon_button_padding"
        android:src="@drawable/update_icon_black_24dp"
        android:tint="?colorAccent" />

    <ProgressBar
        android:id="@+id/subtitle_Progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/subtitle_text"
        android:layout_toRightOf="@id/subtitle_text"
        android:visibility="gone" />

</RelativeLayout>